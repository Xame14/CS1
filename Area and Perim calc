void compute_area_perimeter(double a,double b)
{
    double perimeter = 2*(a+b);
    double area = a*b
    cout<<"The area is "<<showpoint<<setprecision(3)<<fixed<<area<<" and the perimeter is "<<showpoint<<setprecision(2)<<fixed<<perimeter<<".";
}
