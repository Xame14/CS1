void flag_controlled_loop()
{
    char r;
    bool correct = false;
    
    while(correct != true){
        cout<<"Do you like icecream? (y or n): ";
        cin>>r;
        if (r != 'y')
            if (r != 'n')
                cout<<"Incorrect"<<endl;
        if (r == 'y' || r == 'n'){
            cout<<"Thanks!";
            ic = true;
        }
