    }
}

void pause()
{
    cout<<"Press Enter to continue...";
    cin.sync();
    cin.ignore();
    cin.get();
}

void clear_screen()
{
    cout<<"\033[0;0H\033[2J";

}

void counterNflag_controlled_loop()
{
    int n,g;
    int c = 0;
    n = rand() % 100 + 1;
    while (gs != true && c < 5){
        cout<<"Guess a number the computer randomly picked between 1 - 100: ";
        cin>>g;
        if(g != n){
            if (g > n)
                cout<<"Sorry, your guess is to high."<<endl;
            if (g < n)
               cout<<"Sorry, your guess is to low."<<endl;
            c = c + 1;
        }
        else{
            cout<<"You guessed right, you win!"
            c = c + 5;
        }
    if (c == 5)
        cout<<"Sorry you lost. The answer is: "<<n;
    }
    
}
